@model VL_VendasLanches.Models.Produto

@{
    ViewData["Title"] = "Delete";
}


<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-dark">Deseja deletar este Produto?</h1>
        </div>
        <hr />
        <div class="row">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DescricaoCurta)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DescricaoCurta)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DescricaoDetalhada)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DescricaoDetalhada)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Preco)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Preco)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ImagemUrl)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ImagemUrl)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ImagemThumbnailUrl)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ImagemThumbnailUrl)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsLanchePreferido)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IsLanchePreferido)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EmEstoque)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EmEstoque)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Categoria)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Categoria.CategoriaNome)
                </dd>
            </dl>
            </br>
            <hr />
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
            </form>
        </div>
    </div>
</div>
