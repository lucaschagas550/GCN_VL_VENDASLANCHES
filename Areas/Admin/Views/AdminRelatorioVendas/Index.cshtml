<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-dark">Relatório de Pedidos por Período</h1>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form class="form-horizontal" asp-action="RelatorioVendasSimples">
                    <fieldset>
                        <div class="form-group">
                            <label for="minDate" class="col-lg-6 control-label">Data Inicial</label>
                            <div class="col-lg-10">
                                <input type="date" name="minDate" class="form-control" />
                            </div>
                        </div>
                        </br>
                        <div class="form-group">
                            <label for="maxDate" class="col-lg-6 control-label">Data Final</label>
                            <div class="col-lg-10">
                                <input type="date" name="maxDate" class="form-control" />
                            </div>
                        </div>
                        </br>
                        <hr/>
                        <div class="form-group">
                            <div class="col-lg-10 col-lg-offset-2">
                                <button type="submit" class="btn btn-primary">Enviar</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>