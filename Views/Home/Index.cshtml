@model HomeViewModel

@*@{
    ViewData["Title"] = "Home page"; //Define o nome que aparece na aba
}
*@

<section>
    <div>
        <div class="p-2">
            <partial name="_Carousel" /> @*Chama uma partial view que pode ser usada em outras telas*@
        </div>


        <div class="text-start p-3">
            <h2>
                <i class="fa-regular fa-star"></i>
                Os lanches preferidos da semana
                <i class="fa-regular fa-star"></i>
            </h2>
        </div>

       <div class="row  row-cols-md-3 g-4 p-2">
            @foreach (var lanche in Model.LanchesPreferidos)
            {
                <partial name="_LanchesResumo" for="@lanche" />
            }
        </div>
    </div>
</section>
